<% layout('layouts/boilerplate')%>
    <div class="container justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">

                    <div class="card-body">
                        <h4 class="card-title text-center mb-3">Update</h4>
                        <form action="/update/<%=user.id%>?_method=PUT" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="name">Name</label>
                                <input class="form-control" type="text" id="name" name="name" value="<%=user.name%>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" value="<%=user.email%>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="age">Age</label>
                                <input class="form-control" type="age" id="age" name="age" value="<%=user.age%>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="gender">Gender</label>
                                <input class="form-control" type="gender" id="gender" name="gender" value="<%=user.gender%>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success btn-block">Enter</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>